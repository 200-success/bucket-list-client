<div class="items">
   <h2>My Bucket List</h2>
   <ul id="items">
   {{#each items as |item|}}
     <div data-id="{{item._id}}">

       <!-- Item Display Modal -->
       <button type="button" class="col-6 btn btn-primary btn-block" data-toggle="modal" data-target="#item-modal" data-item="{{json item}}">
         {{item.title}}
       </button>

       <!--completed button (new)-->
       <div class="completed col-2">
         <!-- Completed Modal Trigger Button -->
         <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#completedItem">
           Done
         </button>
         <!-- Modal -->
         <div class="modal fade" id="completedItem" tabindex="-1" role="dialog" aria-labelledby="completedItemLabel" aria-hidden="true">
           <div class="modal-dialog" role="document">
             <div class="modal-content">
               <div class="modal-header">
                 <h5 class="modal-title" id="completedItemLabel">I did it!</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                 </button>
               </div>
               <div class="modal-body">
                 Are you sure you want to mark this item off as done?
                 <button class="btn" id="complete-item-confirm">Yes, mark it off!</button>
               </div>
             </div>
           </div>
         </div> <!--ends completedItem modal-->
       </div> <!--ends completedItem section-->


       <!--Update button-->
       <button type="button" class="col-2 btn btn-primary btn-block" data-toggle="modal" data-target="#updateItem">
         Update
       </button>
       <!-- Modal -->
       <div class="modal fade" id="updateItem" tabindex="-1" role="dialog" aria-labelledby="updateItemLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="updateItemLabel">Update My Bucket List Item</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span> </button>
            </div>
            <div class="modal-body">
              <div>
                <h6><span>* = Required Field</span></h6>
              </div>
              <h4 class="form-title"> Change the fields you want to update: </h4>
              <form id="update-form">
                Title: <span class="required field">*</span> <input type="text" name="item[title]" value="{{item.title}}"> <br>
                Description: <span class="required field">*</span> <textarea name="item[description]" rows="10" cols="50" value="{{item.description}}"> </textarea> </br>
                Location: <input type="text" name="item[location]" value="{{item.location}}"> </br>
                Cost Estimate: <input type="text" name="item[cost]" value="{{item.cost}}"> </br>
                Importance Rating: <select name="item[importanceScale]" value="{{item.importanceRating}}">
                  <option value="1">1 (not very important)</option>
                  <option value="2">2 (somewhat important)</option>
                  <option value="3">3 (important)</option>
                  <option value="4">4 (very important)</option>
                  <option value="5">5 (absolutely crucial)</option>
                </select>
                </br>
                Difficulty Rating:<select name="item[difficultyScale]" value="{{item.difficultyRating}}">
                  <option value="1">1 (not very important)</option>
                  <option value="2">2 (somewhat important)</option>
                  <option value="3">3 (important)</option>
                  <option value="4">4 (very important)</option>
                  <option value="5">5 (absolutely crucial)</option>
               </select>
               </br>
                <button class="btn" type="submit" id="update-item-submit">Submit</button>
              </form>
            </div>
          </div>
        </div>
       </div>

       <!--delete button (new)-->
       <div class="deleteItem col-2">
         <!-- Completed Modal Trigger Button -->
         <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#deleteItem">
           Delete
         </button>
         <!-- Modal -->
         <div class="modal fade" id="deleteItem" tabindex="-1" role="dialog" aria-labelledby="deleteItemLabel" aria-hidden="true">
           <div class="modal-dialog" role="document">
             <div class="modal-content">
               <div class="modal-header">
                 <h5 class="modal-title" id="deleteItemLabel">I did it!</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                 </button>
               </div>
               <div class="modal-body">
                 Are you sure you want to delete this bucket list item? You will not be able to get it back.
                 <button class="btn" id="delete-item-confirm">Yes, delete it!</button>
               </div>
             </div>
           </div>
         </div> <!--ends deleteItem modal-->
       </div> <!--ends deleteItem section-->

     </div> <!--ends using data-target=data-id-->
   {{/each}}

   <div class="modal fade" id="item-modal" tabindex="-1" role="dialog" aria-labelledby="itemViewLabel" aria-hidden="true" >
     <div class="modal-dialog" role="document">
       <div class="modal-content">
         <div class="modal-header">
           <h5 class="modal-title item-title" id="itemViewLabel"></h5>
           <button type="button" class="close" data-dismiss="modal" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
         </div>
         <div class="modal-body">
           <div>
             Item ID: <span class="item-id"></span>
           </div>
           <br><div>
             Location: <span class="item-location"></span>
           </div>
           <br>
           <div>
             Description: <span class="item-description"></span>
           </div>
           <br>
           <div>
             Cost: <span class="item-cost"></span>
           </div>
           <br>
           <div>
             Importance Rating: <span class="item-importance-scale"></span>
           </div>
           <br>
           <div>
             Difficulty Rating: <span class="item-difficulty-scale"></span>
           </div>
           <br>
           <div>
             Completed: <span class="item-completed"></span>
           </div>
           <br>
         </div>
       </div>
     </div>
   </div> <!--ends view item modal-->
   </ul>
</div>
